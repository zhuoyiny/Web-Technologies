<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin" >

    <LinearLayout
        android:id="@+id/lin_address"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/real_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="real_address"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/real_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="real_phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Price Level"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/real_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="real_price" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rating"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@+id/real_rating"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="TextView" />-->

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize=".1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/google_page"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Google Page"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/real_google_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="real_google_page" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/website"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/real_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="real_website" />

    </LinearLayout>


</LinearLayout>